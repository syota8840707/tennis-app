
   <div class="coats-card" id="cards-js">
      <div class='coat-img-card'>
        <%= image_tag coat.image, class: "image-card" %>
      </div>
      <ul class='coat-card-list' id="card-js">
      <%= link_to coat_path(coat.id) do %>  
        <li class='coat-list'>
          <div class='card-info'>
            <%= coat.name %>
          </div> 
          <div class='card-info'>
            <%= "〒 #{coat.prefecture.name}" %><%= coat.city %><%= coat.address %>
          </div>
          <div class='card-info'>
            <%= "投稿者 #{coat.user.nickname}" %>
          </div>
        </li>
      <% end %> 
      </ul>
   </div>
